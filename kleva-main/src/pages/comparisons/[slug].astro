---
import BaseLayout from "@/layouts/base-layout.astro";
import ComparisonTable from "@/components/app-comparison-table.astro";
import KeyTakeaways from "@/components/app-key-takeaways.astro";

export function getStaticPaths() {
  return [
    { params: { slug: "kleva-vs-traditional-collections" } },
    { params: { slug: "ai-vs-human-debt-collectors" } },
  ];
}

const { slug } = Astro.params;

const comparisons = {
  "kleva-vs-traditional-collections": {
    title: "Kleva AI vs Traditional Debt Collection Methods",
    description:
      "Compare AI-powered debt collection with traditional methods. See why Kleva recovers 25% more at 70% less cost.",
    h1: "Kleva AI vs Traditional Debt Collection: 2025 Comparison",
    competitorName: "Traditional Methods",
    takeaways: [
      "AI recovers 40-45% vs traditional 15-20%",
      "70% cost reduction with AI automation",
      "24/7 availability vs limited human hours",
      "Perfect compliance with every call",
    ],
    rows: [
      { feature: "Recovery Rate", kleva: "40-45%", competitor: "15-20%" },
      {
        feature: "Cost per Collection",
        kleva: "70% less",
        competitor: "Standard",
      },
      {
        feature: "Languages",
        kleva: "Spanish, Portuguese, English",
        competitor: "English only",
      },
      { feature: "Availability", kleva: "24/7", competitor: "Business hours" },
      { feature: "Setup Time", kleva: "3 weeks", competitor: "3-6 months" },
    ],
  },
  // THIS IS A DUMMY DATA I ADDED TO PASS THE BUILD
  "ai-vs-human-debt-collectors": {
    title: "AI vs Human Debt Collectors: Performance & Cost Analysis",
    description:
      "Detailed comparison of AI-powered debt collection agents versus human collectors. Discover efficiency gains, cost savings, and recovery rate improvements.",
    h1: "AI vs Human Debt Collectors: Complete 2025 Comparison",
    competitorName: "Human Collectors",
    takeaways: [
      "AI handles 10x more calls simultaneously",
      "Consistent quality without fatigue or burnout",
      "Zero training costs and instant scalability",
      "100% compliance adherence on every interaction",
    ],
    rows: [
      {
        feature: "Capacity",
        kleva: "Unlimited",
        competitor: "40-60 calls/day",
      },
      {
        feature: "Cost per Agent",
        kleva: "$500/month",
        competitor: "$3,000-5,000/month",
      },
      {
        feature: "Training Time",
        kleva: "Instant",
        competitor: "2-3 months",
      },
      { feature: "Availability", kleva: "24/7/365", competitor: "8 hours/day" },
      {
        feature: "Consistency",
        kleva: "100% uniform",
        competitor: "Varies by agent",
      },
      {
        feature: "Compliance",
        kleva: "Perfect adherence",
        competitor: "Human error risk",
      },
      {
        feature: "Scalability",
        kleva: "Instant",
        competitor: "Weeks to months",
      },
    ],
  },
};

const data = comparisons[slug as keyof typeof comparisons];
---

<BaseLayout title={data.title} description={data.description}>
  <section class="section__block__bottom container">
    <article class="comparison">
      <h1>{data.h1}</h1>

      <KeyTakeaways takeaways={data.takeaways} />

      <ComparisonTable
        title="Quick Comparison"
        competitorName={data.competitorName}
        rows={data.rows}
      />

      <!-- Add more content sections -->
    </article>
  </section>
</BaseLayout>

<style>
  .container {
    padding-top: 140px;

    @include respond-to(md) {
      padding-top: 180px;
    }

    @include respond-to(lg) {
      padding-top: 240px;
    }
  }
  .comparison {
    max-width: 900px;
    margin: 0 auto;
    padding: 48px 24px 24px 48px;
  }
</style>
