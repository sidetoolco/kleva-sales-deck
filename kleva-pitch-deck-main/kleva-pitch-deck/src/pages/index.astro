<style>
  main {
    scrollbar-width: thin;
    scrollbar-color: #BE79FF #141C25;
  }
</style>

<script>
  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    const slides = document.querySelectorAll('.slide');
    const currentSlide = Math.round(window.scrollY / window.innerHeight);
    
    if (e.key === 'ArrowDown' || e.key === ' ' || e.key === 'PageDown') {
      e.preventDefault();
      if (currentSlide < slides.length - 1) {
        slides[currentSlide + 1].scrollIntoView({ behavior: 'smooth' });
      }
    } else if (e.key === 'ArrowUp' || e.key === 'PageUp') {
      e.preventDefault();
      if (currentSlide > 0) {
        slides[currentSlide - 1].scrollIntoView({ behavior: 'smooth' });
      }
    } else if (e.key === 'Home') {
      e.preventDefault();
      slides[0].scrollIntoView({ behavior: 'smooth' });
    } else if (e.key === 'End') {
      e.preventDefault();
      slides[slides.length - 1].scrollIntoView({ behavior: 'smooth' });
    }
  });

  // Update URL hash on scroll
  let ticking = false;
  function updateHash() {
    const slides = document.querySelectorAll('.slide');
    const currentSlide = Math.round(window.scrollY / window.innerHeight);
    const currentSlideElement = slides[currentSlide];
    if (currentSlideElement) {
      const id = currentSlideElement.getAttribute('data-slide');
      if (id && window.location.hash !== `#${id}`) {
        history.replaceState(null, null, `#${id}`);
      }
    }
    ticking = false;
  }

  document.querySelector('main').addEventListener('scroll', () => {
    if (!ticking) {
      requestAnimationFrame(updateHash);
      ticking = true;
    }
  });

  // Navigate to hash on load
  if (window.location.hash) {
    const target = document.querySelector(window.location.hash);
    if (target) {
      setTimeout(() => {
        target.scrollIntoView({ behavior: 'smooth' });
      }, 100);
    }
  }
</script>